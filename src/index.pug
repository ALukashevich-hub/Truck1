html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="keywords" content=`tmlWebpackPlugin.options.templateParameters.page_meta.meta_keywords`)
    meta(name="description" content=`tmlWebpackPlugin.options.templateParameters.page_meta.meta_description`)
    title #{htmlWebpackPlugin.options.templateParameters.page_meta.title}
  body.container.is-fullhd
    include components/header.pug
    div.columns
      div.column.is-one-quarter
        include components/filter.pug
      div.column
        include components/content.pug
    include components/footer.pug